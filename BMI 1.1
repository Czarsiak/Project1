    public void calculateBMI(double number1, double number2) {
        try {
            BMI = number2 / ((number1/100) * 2);

        } catch (NumberFormatException nfe) {
            output += "\n\n błędne dane";
            jopIcon = JOptionPane.ERROR_MESSAGE;
        }
    }

    public void calculate() {
        Height = height.getText();
        Weight = weight.getText();

        try {
            number1 = Double.parseDouble(Height);
            number2 = Double.parseDouble(Weight);

            calculateBMI(number1, number2);



        } finally {

            if (BMI >= 27.5) {

                //output += "\n\n Jesteś grubasem,przestańżreć!";
            	System.out.println("jesteś gruby");
            } else if (BMI <= 23 || BMI < 27.4) {

                output += "\n\n Jesteś tłusty zacznij myślieć o diecie.";

            } else if (BMI <= 18.5 || BMI < 22.9) {
                output += " Jest spoko jeszcze chwilę pożyjesz!";

            } else if (BMI < 18.4) {
                output += "\n\n Zacznij coś jeść szkieletorze";

            }
        }

    }

